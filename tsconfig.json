{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
    "paths": {
      "pages": ["pages/*"],
      "components": ["components/*"],
      "config": ["config/*"],
      "styles": ["styles/*"],
      "utils": ["utils/*"],
      "types": ["types/*"],
      "store": ["store/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
